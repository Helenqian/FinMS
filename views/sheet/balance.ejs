<table class="layui-table" lay-data="{url:'/test/table/demo2.json?v=3', cellMinWidth: 80, page: true}">
  <thead>
    <tr>
      <th lay-data="{field:'asset', width:500, align:'center'}" colspan="4">资产</th>
      <th lay-data="{field:'liabilities', width:500, align:'center'}" colspan="4">负债及所有者权益</th>
    </tr>
    <tr>
      <th lay-data="{field:'assproj', minWidth:260, align:'center'}">项目</th>
      <th lay-data="{field:'assnum', width:40, align:'center', sort: true}">行次</th>
      <th lay-data="{align:'assendbln', width:100, align:'center'}">期末余额</th>
      <th lay-data="{field:'assstartbln', width:100, align:'center'}">年初余额</th>
      
      <th lay-data="{field:'liabproj', minWidth:260, align:'center'}">项目</th>
      <th lay-data="{field:'liabnum', width:40, align:'center', sort: true}">行次</th>
      <th lay-data="{field:'liabendbln', width:100, align:'center'}">期末余额</th>
      <th lay-data="{field:'liabstartbln', width:100, align:'center'}">年初余额</th>
    </tr>
  </thead>
</table>
 
<script type="text/html" id="barDemo">
  <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="detail">按钮1</a>
  <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="edit">按钮2</a>
</script>
