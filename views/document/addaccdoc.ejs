<script src="./lib/layui/layui.js" charset="utf-8"></script>

<script>
layui.use('table', function(){
    var table = layui.table;
    
    //方法级渲染
    table.render({
      elem: '#LAY_table_addaccdoc'
      ,url: '/api/addaccdoc'
      ,cols: [[ //表头
        {field:'id', title:'id', width:120, sort:true, edit: 'text', fixed: 'left'}
        ,{field:'num', title: '凭证号', width:100, sort: true, edit: 'text'}
        ,{field:'headercode', title:'摘要编号', width:120, edit: 'text'}
        ,{field:'headername', title:'摘要名称', width:200, edit: 'text'}
        ,{field:'acccode', title:'科目编号', width:120, edit: 'text'}
        ,{field:'accname', title:'科目名称', width:150, edit: 'text'}
        ,{field:'debit', title:'借方金额', width:120, edit: 'text'}
        ,{field:'credit', title:'贷方金额', width:120, edit: 'text'}
        ,{field: 'operation', title: '操作', fixed: 'right', width:120, align:'center', toolbar: '#barDemo'}
      ]]
      ,id: 'addaccdoc'
      ,page: true
      ,height: 315
    });

    table.reload("addaccdoc",{
         page: {
             curr: 1 //重新从第 1 页开始
             }
         ,where: {
        }
        });
  
    var $ = layui.$, active = {
    addLine: function(){ //获取选中数据
    layui.use('table', function(){
     var table = layui.table;
      /*datas1 = [];
      var table1 = table.cache.addaccdoc;
      for (var g = 0; g < table1.length; g++){
            datas1.push(table1[g]);
      }
        datas1.push({
            headername: ""
            ,headercode: ""
            ,acccode: ""
            ,accname: ""
            ,debamt: ""
            ,creamt: ""
        });*/
        table.reload("addaccdoc",{
         page: {
             curr: 1 //重新从第 1 页开始
             }
         ,where: {
            new: 1
        }
        });
      });
    }
  };
  
  $('.demoTable .layui-btn').on('click', function(){
      var type = $(this).data('type');
      active[type] ? active[type].call(this) : '';
    });


table.on('tool(addaccdoc)', function(obj){ //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
  var data = obj.data; //获得当前行数据
  var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
  var tr = obj.tr; //获得当前行 tr 的DOM对象
  if(layEvent === 'del'){ //删除
    layer.confirm('真的删除行么', function(index){
         //向服务端发送删除指令
        $.ajax({
           type : "post",
           url: "/deletedocitem",
           data:{
              //'' : obj.data.code
            },
           success: function(data) { 
              //判断是否删除成功
              $(obj).parents("tr").remove();
                 layer.msg('已删除!',{icon:1,time:1000});
                 layer.close(index);//关闭
           }
        });
        obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
        layer.close(index);
    });
  }
  else if(layEvent === 'save'){ //编辑
    layer.confirm('保存凭证条目吗？', function(index){
         //向服务端发送保存指令
        $.ajax({
           type : "post",
           url: "/savedocitem",
           data:{
               num: obj.data.num
               ,id: obj.data.id
               ,debit: obj.data.debit
               ,credit: obj.data.credit
               ,headercode: obj.data.headercode
               ,headername: obj.data.headername
               ,acccode: obj.data.acccode
               ,accname: obj.data.accname
            },
           success: function(data) { 
              //判断是否保存成功
              $(obj).parents("tr").remove();
                 layer.msg('已保存!',{icon:1,time:1000});
                 layer.close(index);//关闭
           }
        });
    });
  }
});

});
</script>
<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="save">保存</a>
</script>
