<%- layout('style') -%>
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>layui</title>
  <meta name="renderer" content="webkit">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <link rel="stylesheet" href="/layui/css/layui.css"  media="all">
  <!-- 注意：如果你直接复制所有代码到本地，上述css路径需要改成你本地的 -->
</head>
<body> 
 
<div class="demoTable">
  <div class="layui-inline layui-col-md12 x-so">
    <input class="layui-input" name="code" placeholder="摘要编号" lay-verify="required" id="demoReload" autocomplete="off">
    <input class="layui-input" name="name" placeholder="摘要名称" id="nameReload" autocomplete="off">
    <button class="layui-btn" data-type="reload"><i class="layui-icon">&#xe615;</i></button>
  </div>
</div>
 
<table class="layui-hide" id="LAY_table_user" lay-filter="user"></table> 
               
          
<script src="/lib/layui/layui.js" charset="utf-8"></script>
<!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
<script>
layui.use('table', function(){
  var table = layui.table;
  
  //方法级渲染
  table.render({
    elem: '#LAY_table_user'
    ,url: '/api/header'
    ,cols: [[ //表头
      {type:'checkbox', fixed: 'left'}
      ,{field: 'code', title: '摘要编号', width:300, sort: true, fixed: 'left'}
      ,{field: 'name', title: '摘要名称', width:380}
      ,{field: 'operation', title: '操作', fixed: 'right', width:180, align:'center', toolbar: '#barDemo'}
    ]]
    ,id: 'testReload'
    ,page: true
    ,height: 315
  });
  
  var $ = layui.$, active = {
    reload: function(){
      var demoReload = $('#demoReload');
      var nameReload = $('#nameReload');
      
      //执行重载
      table.reload('testReload', {
        page: {
          curr: 1 //重新从第 1 页开始
        }
        ,where: {
            headercode: demoReload.val()
            ,headername: nameReload.val()
        }
      });
    }
  };
  
  $('.demoTable .layui-btn').on('click', function(){
    var type = $(this).data('type');
    active[type] ? active[type].call(this) : '';
  });
});
</script>

</body>
</html>